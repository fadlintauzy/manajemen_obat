  "routes": {
    "web": [
      {
        "method": "GET",
        "path": "/",
        "controller": "AuthController@showLoginForm",
        "name": "login"
      },
      {
        "method": "POST",
        "path": "/login",
        "controller": "AuthController@login",
        "name": "login.post",
        "middleware": []
      },
      {
        "method": "GET",
        "path": "/dashboard",
        "controller": "DashboardController@index",
        "name": "dashboard",
        "middleware": ["auth"]
      },
      {
        "method": "POST",
        "path": "/logout",
        "controller": "AuthController@logout",
        "name": "logout",
        "middleware": ["auth"]
      }
    ]
  },
  "controllers": {
    "AuthController": {
      "methods": [
        {
          "name": "showLoginForm",
          "description": "Menampilkan halaman login"
        },
        {
          "name": "login",
          "description": "Handle login logic dengan validasi",
          "validation": ["username required", "password required"]
        },
        {
          "name": "logout",
          "description": "Handle logout dan session destroy"
        }
      ]
    },
    "DashboardController": {
      "methods": [
        {
          "name": "index",
          "description": "Menampilkan dashboard dengan user info dan tech stack"
        }
      ]
    }
  },
  "views": {
    "layouts": [
      "layouts/app.blade.php",
      "layouts/auth.blade.php"
    ],
    "pages": [
      "auth/login.blade.php",
      "dashboard/index.blade.php"
    ]
  },
  "features": [
    "Modern Glassmorphism design",
    "Animated gradient background",
    "Form validation client & server side",
    "Secure password hashing with bcrypt",
    "Session management",
    "CSRF protection",
    "Responsive design (mobile, tablet, desktop)",
    "Smooth animations & transitions",
    "Tech stack display section",
    "User profile section",
    "Logout functionality",
    "Error message styling",
    "Loading state on buttons"
  ],

{
  "project_name": "Simple Login System",
  "description": "Website login dengan UI modern dan menarik, menampilkan username setelah berhasil login",
  "technology_stack": {
    "framework": "Laravel 11",
    "php_version": "8.4",
    "css_framework": "Tailwind CSS",
    "database": "MySQL",
    "server": "WAMP",
    "design": "Modern Glassmorphism & Gradient"
  },
  "database_schema": {
    "users": {
      "description": "Tabel untuk menyimpan data login user",
      "columns": [
        {
          "name": "id",
          "type": "bigInteger",
          "primary_key": true,
          "auto_increment": true,
          "description": "ID unik untuk setiap user"
        },
        {
          "name": "username",
          "type": "varchar(255)",
          "unique": true,
          "nullable": false,
          "description": "Username unik untuk login"
        },
        {
          "name": "password",
          "type": "varchar(255)",
          "nullable": false,
          "description": "Password ter-hash menggunakan bcrypt"
        },
        {
          "name": "email",
          "type": "varchar(255)",
          "unique": true,
          "nullable": true,
          "description": "Email user (opsional)"
        },
        {
          "name": "nama_lengkap",
          "type": "varchar(255)",
          "nullable": true,
          "description": "Nama lengkap user"
        },
        {
          "name": "created_at",
          "type": "timestamp",
          "default": "CURRENT_TIMESTAMP",
          "description": "Waktu pembuatan akun"
        },
        {
          "name": "updated_at",
          "type": "timestamp",
          "default": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
          "description": "Waktu update terakhir"
        }
      ],
      "migration_name": "create_users_table.php"
    }
  },
  "pages": {
